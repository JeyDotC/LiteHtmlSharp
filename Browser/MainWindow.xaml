<Window x:Class="Browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Browser"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
   <Grid Name="grid" Background="WhiteSmoke">
      <Canvas Name="canvas" SizeChanged="canvas_SizeChanged" Background="White" MouseMove="canvas_MouseMove" Margin="0,0,0,35"></Canvas>
      <Button x:Name="button" Content="Draw" Click="button_Click" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75"/>
      <Button x:Name="btClear" Content="Clear" Click="btClear_Click" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75"/>
      <Label Name="lbTime" Content="Render Time: " HorizontalAlignment="Left" Margin="10,0,0,7" VerticalAlignment="Bottom"/>
      <Button x:Name="btLoad" Content="Load File" Click="btLoad_Click" HorizontalAlignment="Left" Margin="199,0,0,10" VerticalAlignment="Bottom" Width="75"/>
   </Grid>
</Window>
